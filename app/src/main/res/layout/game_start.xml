<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E48C">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whac-A-Math"
        android:textSize="70sp"

        android:textColor="#022D11"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/jomhuria"/>

    <TextView
        android:id="@+id/titleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whac-A-Math"
        android:textSize="70sp"
        android:textColor="#66022D11"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/jomhuria"/>

    <TextView
        android:id="@+id/titleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whac-A-Math"
        android:textSize="70sp"
        android:textColor="#33022D11"
        android:layout_marginTop="101dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/jomhuria" />


    <ImageView
        android:id="@+id/centerCharacter"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginBottom="84dp"
        android:src="@drawable/center_"
        android:layout_marginStart="125dp"
        android:layout_marginTop="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/plusCharacter"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/plus_"
        android:layout_marginStart="30dp"
        android:layout_marginTop="345dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/divideCharacter"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/division_"
        android:layout_marginStart="195dp"
        android:layout_marginTop="349dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/exclamationCharacter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/exclamation_"
        android:layout_marginStart="278dp"
        android:layout_marginTop="349dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:text="start"
        android:fontFamily="@font/jomhuria"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:gravity="center"
        android:paddingTop= "11dp"
        android:includeFontPadding="false"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>